# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=release
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),release)
  ip_config = release
  oscpack_config = release
  sendosc_config = release
endif
ifeq ($(config),debug)
  ip_config = debug
  oscpack_config = debug
  sendosc_config = debug
endif

PROJECTS := ip oscpack sendosc

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

ip:
ifneq (,$(ip_config))
	@echo "==== Building ip ($(ip_config)) ===="
	@${MAKE} --no-print-directory -C . -f ip.make config=$(ip_config)
endif

oscpack:
ifneq (,$(oscpack_config))
	@echo "==== Building oscpack ($(oscpack_config)) ===="
	@${MAKE} --no-print-directory -C . -f oscpack.make config=$(oscpack_config)
endif

sendosc: ip oscpack
ifneq (,$(sendosc_config))
	@echo "==== Building sendosc ($(sendosc_config)) ===="
	@${MAKE} --no-print-directory -C . -f sendosc.make config=$(sendosc_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f ip.make clean
	@${MAKE} --no-print-directory -C . -f oscpack.make clean
	@${MAKE} --no-print-directory -C . -f sendosc.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  release"
	@echo "  debug"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   ip"
	@echo "   oscpack"
	@echo "   sendosc"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"